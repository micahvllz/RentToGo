<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=
    , initial-scale=1.0"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <style>
      .card-img-top {
        height: 300px;
        object-fit: cover;
      }
      .description-text {
        height: 100px;
        overflow: hidden;
      }
      a {
        text-decoration: none;
        color: inherit;
      }
      .avatar-xs {
        height: 2rem;
        width: 2rem;
      }
    </style>
    <title>RentToGo | All Listings</title>
  </head>
  <body>
    <main class="container my-4">
      <div class="d-flex justify-content-between text-center">
        <h3>All Listings</h3>
        <a role="button" href="/listings/add" class="btn btn-dark">
          <span class="text-center">Add Listing</span>
        </a>
      </div>
      <div class="mt-3 row row-cols-1 row-cols-md-3 g-5">
        <% for(let listing of listings) { %>
        <div class="col">
          <a href="/listings/<%= listing._id %>">
            <div class="card h-100 shadow bg-body rounded border-0">
              <img src="<%= listing.image %>" class="card-img-top" />
              <div class="card-body d-flex flex-column justify-content-between">
                <h5 class="card-title"><%= listing.name %></h5>
                <p class="description-text text-muted">
                  <%= listing.description %>
                </p>
              </div>
              <div class="card-footer">
                <div class="d-flex gap-3 align-items-center">
                  <img
                    src="https://cdn-icons-png.flaticon.com/512/1144/1144709.png"
                    class="rounded-circle avatar-xs"
                  />
                  <div>
                    <p class="mb-0"><%= listing.uploader %></p>
                    <small class="text-muted">
                      <%= listing.createdAt.toLocaleString('default', { month:
                      'short' }); %> <%= listing.createdAt.getDate() %>, <%=
                      listing.createdAt.getFullYear() %>
                    </small>
                  </div>
                </div>
              </div>
            </div>
          </a>
        </div>
        <% } %>
      </div>
    </main>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
